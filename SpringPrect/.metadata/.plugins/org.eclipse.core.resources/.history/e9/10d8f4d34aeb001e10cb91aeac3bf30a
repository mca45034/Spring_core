package com.rays.test;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;
import org.springframework.stereotype.Component;

import com.rays.dto.EmployeDTO;
import com.rays.dto.UserDTO;
import com.rays.service.EmployeServiceInt;

@Component("testEmployeService")
public class testEmployeService {
	private EmployeServiceInt service;
	public static void main(String[] args) {
		ApplicationContext context=new ClassPathXmlApplicationContext("applicationContext.xml");
		testEmployeService emp=context.getBean(testEmployeService.class);
		emp.testAdd();
		
	}

	private void testAdd() {
		EmployeDTO dto=new EmployeDTO();
		
		dto.setId(4);
		dto.setFirstName("pari");
		dto.setLastName("kirar");
		dto.setLogin("pari@gmail.com");
		dto.setPassword("pari@123");
		long pk=service.add(dto);
		System.out.println("data added...."+pk);
		
	}

}
